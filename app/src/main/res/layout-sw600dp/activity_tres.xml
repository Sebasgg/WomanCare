<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"

    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <Button
            android:id="@+id/regresar"
            android:layout_width="296dp"
            android:layout_height="99dp"
            android:backgroundTint="#eed4bc"
            android:text="REGRESAR"
            android:textColor="#6E3500"
            android:textSize="36sp">

        </Button>


        <RelativeLayout
            android:layout_width="950dp"
            android:layout_height="0dp"
            android:layout_weight="2">


            <TextView
                android:id="@+id/textGrid"
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="104dp"
                android:layout_marginEnd="152dp"
                android:text="@string/texto27"
                android:textColor="#78420D"
                android:textSize="56sp"

                android:textStyle="bold" />
        </RelativeLayout>

        <GridLayout
            android:id="@+id/mainGridddd"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:layout_weight="8"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:padding="14dp"
            android:rowCount="3"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/colorRosa"

                >

                <LinearLayout
                    android:layout_width="368dp"
                    android:layout_height="270dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="186dp"
                        android:layout_height="174dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/lopop" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/texto28"
                        android:textAlignment="center"
                        android:textColor="#9e8771"
                        android:textSize="36sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/colorRosa"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="326dp"
                    android:layout_height="273dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="236dp"
                        android:layout_height="182dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/lopop" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/texto29"
                        android:textAlignment="center"
                        android:textColor="#9e8771"
                        android:textSize="36sp"

                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/colorRosa"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="335dp"
                    android:layout_height="293dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="202dp"
                        android:layout_height="221dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/lopop" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/texto30"
                        android:textAlignment="center"
                        android:textColor="#9e8771"
                        android:textSize="36sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Column 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/colorRosa"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="284dp"
                    android:layout_height="259dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="203dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/lopop" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/texto31"
                        android:textAlignment="center"
                        android:textColor="#9e8771"
                        android:textSize="36sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- Row 2 -->

            <!-- Column 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/colorRosa"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="316dp"
                    android:layout_height="260dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="243dp"
                        android:layout_height="194dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/poli" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="@string/texto32"
                        android:textAlignment="center"
                        android:textColor="#9e8771"
                        android:textSize="36sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Column 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/colorRosa"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="288dp"
                    android:layout_height="255dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="212dp"
                        android:layout_height="188dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/sicolo" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="5"
                        android:text="@string/texto33"
                        android:textAlignment="center"
                        android:textColor="#9e8771"
                        android:textSize="36sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>




        </GridLayout>


    </LinearLayout>
</RelativeLayout>